<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="start"
            android:padding="@dimen/dimen_3dp"
            android:text="Name"
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fPlusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_add_circle_outline_24" />

            <TextView
                android:id="@+id/firstMealTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_3dp"
                android:background="@drawable/bg_et"
                android:gravity="center"
                android:padding="@dimen/dimen_5dp"
                android:text="0"
                android:textSize="@dimen/dimen_18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/fMinusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_remove_circle_outline_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sPlusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_add_circle_outline_24" />

            <TextView
                android:id="@+id/secondMealTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_3dp"
                android:background="@drawable/bg_et"
                android:gravity="center"
                android:padding="@dimen/dimen_5dp"
                android:text="0"
                android:textSize="@dimen/dimen_18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/sMinusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_remove_circle_outline_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tPlusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_add_circle_outline_24" />

            <TextView
                android:id="@+id/thirdMealTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_3dp"
                android:background="@drawable/bg_et"
                android:gravity="center"
                android:padding="@dimen/dimen_5dp"
                android:text="0"
                android:textSize="@dimen/dimen_18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/tMinusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_remove_circle_outline_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/subTotalMealTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_et"
            android:gravity="center"
            android:padding="@dimen/dimen_3dp"
            android:text="0"
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/purple_200" />
</LinearLayout>